<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:layout_marginTop="24dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="26dp"
    android:orientation="vertical"
    tools:context=".ui.auth.signin.SigninFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="26dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_signin"/>

        <TextView
            android:id="@+id/tv_email"
            android:alpha="0"
            tools:alpha="100"
            android:ems="10"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat Email" />

        <EditText
            android:id="@+id/etEmail"
            style="@style/EditText.PoppinsNormal16sp8D92A3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:alpha="0"
            tools:alpha="100"
            android:ems="10"
            android:hint="Masukkan Alamat Email Anda"
            android:background="@drawable/shape_rectangle_outline_8_020202"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_password"
            android:alpha="0"
            tools:alpha="100"
            android:ems="10"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Password" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:alpha="0"
            tools:alpha="100"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                style="@style/EditText.PoppinsNormal16sp8D92A3"
                android:layout_width="match_parent"
                android:background="@drawable/shape_rectangle_outline_8_020202"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Masukkan Password Anda"
                tools:ignore="SpeakableTextPresentCheck"
                android:ems="10"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSignin"
            android:alpha="0"
            tools:alpha="100"
            android:ems="10"
            style="@style/Button.Primary"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/green100"
            android:text="Sign In"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/HaveAccount"
                android:alpha="0"
                tools:alpha="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="65dp"
                android:text="Belum memiliki Akun?"/>

            <TextView
                android:id="@+id/btnSignup"
                android:alpha="0"
                tools:alpha="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="  Sign Up"
                android:textColor="#006D0B"/>

        </LinearLayout>

    </LinearLayout>


